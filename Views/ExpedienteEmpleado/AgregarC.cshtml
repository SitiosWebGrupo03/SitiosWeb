@{
    Layout = "~/Views/Shared/_LayoutJefatura.cshtml";
}
@{
    var successMessage = TempData["SuccessMessage"] as string;
    var errorMessage = TempData["ErrorMessage"] as string;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expediente de los Colaboradores</title>
    <link rel="stylesheet" type="text/css" href="~/css/AgregarCo.css">
</head>
<body>
    <div class="container">
        <aside class="sidebar">
            <div class="sidebar-header">
                <h2>Formulario de nuevo colaborador</h2>
            </div>
            <ul class="sidebar-menu">

                <li> <a href="/Expediente/CargarComboxAP">Asignar Puesto</a></li>
                <li> <a href="/Home/CrearUS">Crear Usuario</a></li>
            </ul>
        </aside>
        <main class="main-content">
            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="alert alert-success">@successMessage</div>
            }

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger">@errorMessage</div>
            }
            <h1>Expediente de los colaboradores</h1>
            <div class="form-photo-container">
                <div class="form-container">
                    <h2>Formulario de nuevo colaborador</h2>
                    <form id="colaboradorForm" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="identificacion">Identificación</label>
                            <input type="text" id="identificacion" name="identificacion" required>
                        </div>
                        <div class="form-group">
                            <label for="nombre">Nombre Completo</label>
                            <input type="text" id="nombre" name="nombre" required>
                        </div>
                        <div class="form-group">
                            <label for="apellidos">Apellidos</label>
                            <input type="text" id="apellidos" name="apellidos" required>
                        </div>
                        <div class="form-group">
                            <label for="fecha-nacimiento">Fecha Nacimiento</label>
                            <input type="date" id="fecha-nacimiento" name="fecha-nacimiento" required>
                        </div>
                        <div class="form-group">
                            <label for="fecha-contratacion">Fecha Contratación</label>
                            <input type="date" id="fecha-contratacion" name="fecha-contratacion" required>
                        </div>
                        <div class="form-group">
                            <label for="fecha-fin-contrato">Fecha Fin Contrato</label>
                            <input type="date" id="fecha-fin-contrato" name="fecha-fin-contrato" required>
                        </div>
                        <div class="form-group">
                            <label for="correo">Correo</label>
                            <input type="email" id="correo" name="correo" required>
                        </div>
                        <div class="form-group">
                            <label for="telefono">Teléfono</label>
                            <input type="text" id="telefono" name="telefono" required>
                        </div>
                        <div class="buttons">
                            <button type="button" id="btnAsignarPuesto" class="btn">Asignar Puesto</button>
                            <button type="button" id="btnCrearUsuario" class="btn">Crear Usuario</button>
                        </div>
                        <div class="submit-button">
                            <button type="button" id="btnGuardar" class="btn">Guardar</button>
                        </div>
                        <input type="file" id="uploadPhoto" name="photo" accept="image/*" style="display:none;">
                        <input type="hidden" id="photoData" name="photoData">
                    </form>
                </div>
                <div class="photo-container">
                    <div class="photo-controls">
                        <label id="removepho" style="display:none;">Eliminar Foto</label>
                        <button type="button" id="removePhoto" style="display:none;">Eliminar</button>
                    </div>
                    <video id="camera" autoplay></video>
                    <img id="photo" style="display:none;">
                    <div class="photo-buttons">
                        <button type="button" id="capturePhoto" class="btn">Tomar Foto</button>
                        <button type="button" id="customUploadButton" class="btn">Subir Imagen</button>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <script src="~/js/Expediente.js"></script>
</body>
</html>
