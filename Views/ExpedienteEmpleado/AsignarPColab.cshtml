@{
    Layout = "~/Views/Shared/_LayoutJefatura.cshtml";
}

@model SitiosWeb.Model.Colaboradores

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Asignar Puesto para Colaboradores</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>

    <header>
        <h1>Asignar Puesto para Colaboradores</h1>
    </header>

    <main>
        <div class="background-container">
            <div class="image-container">
                <img src="https://ld-wp73.template-help.com/imperion/corporatelanding/wp-content/uploads/2019/07/img-subscribe-737x1024.png" alt="User Photo" class="user-photo">
            </div>
            <div class="form-container">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["SuccessMessage"]
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["ErrorMessage"]
                    </div>
                }

                <form asp-action="Create" method="post">
                    <div class="form-group">
                        <label asp-for="Identificacion"></label>
                        <input asp-for="Identificacion" class="form-control" />
                        <span asp-validation-for="Identificacion" class="text-danger"></span>
                 </div>
                    @* <div class="form-group">
                    <label asp-for="Departamento"></label>
                    <select asp-for="Departamento" class="form-control">
                    <option>Recursos Humanos</option>
                    <option>Finanzas</option>
                    <option>IT</option>
                    </select>
                    <span asp-validation-for="Departamento" class="text-danger"></span>
                    </div> *@
                    <div class="form-group">
                        <label asp-for="IdPuesto"></label>
                        <select id="IdPuesto" name="IdPuesto" class="form-control">
                            @if (ViewBag.Puestos != null)
                            {
                                @foreach (var puesto in ViewBag.Puestos as List<string>)
                                {
                                    <option value="@puesto">@puesto</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="IdPuesto" class="text-danger"></span>
                    </div>
                    <div class="form-buttons">
                        <button type="button" onclick="Atras()" class="salir">Salir</button>
                        <button type="submit" class="guardar">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <script>
        function Atras() {
            window.history.back();
        }
    </script>


</body>
</html>
