@model IEnumerable<SitiosWeb.Model.Puestos>

@{
    Layout = "~/Views/Shared/_LayoutSupervisor.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" type="text/css" href="~/css/menuCRUD.css" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Variables del Sistema</title>
</head>
<body>
    <div id="contenedor">
        <div class="vertical-menu">
            
            <a asp-controller="Home" asp-action="IndexActividades">Actividades</a>
            <a asp-controller="Home" asp-action="IndexInconsistencias">Inconsistencias</a>
            <a asp-controller="Home" asp-action="IndexPermisos">Permisos</a>
            <a asp-controller="Home" asp-action="IndexRebajos">Rebajos</a>
            <a asp-controller="Home" asp-action="IndexUsuarios">Usuarios</a>
            <a asp-controller="Home" asp-action="IndexDepartamentos">Departamentos</a>
            <a asp-controller="Home" asp-action="IndexPuestos">Puestos</a>
            <a asp-action="IndexSupervisor" asp-controller="Home"> Volver al menu</a>

        </div>

        <div id="contenido">

            <p>
                <a asp-controller="PuestosController" asp-action="Create">Crear Nuevo</a>
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.NombrePuesto)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Salario)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Estado)
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.NombrePuesto)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Salario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Estado)
                            </td>

                            <td>
                                <a asp-controller="Puestos" asp-action="Edit" asp-route-id="@item.IdPuesto">Editar</a>
                                <a asp-controller="Puestos" asp-action="Delete" asp-route-id="@item.IdPuesto">Borrar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>


    </div>

</body>
</html>