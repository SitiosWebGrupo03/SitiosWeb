@model SitiosWeb.Model.SolicitudHorasExtra

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aprobación de Horas Extras</title>
    <link rel="stylesheet" type="text/css" href="~/css/aprobacion.css" />
</head>
<body>
    <div class="background-circle circle1"></div>
    <div class="background-circle circle2"></div>
    <div class="container">
        <div class="header">
            <h1>Aprobar/Rechazar Horas Extras</h1>
        </div>
        <form asp-action="Aprobar" method="post">
            <div class="form-section">
                <div class="form-group">
                    <label asp-for="IdSolicitante">ID del Solicitante:</label>
                    <input asp-for="IdSolicitante" readonly class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="IdEmpleado">ID del Empleado:</label>
                    <input asp-for="IdEmpleado" readonly class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="FechaSolicitud">Fecha de Solicitud:</label>
                    <input asp-for="FechaSolicitud" readonly type="date" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Horas">Horas Extras:</label>
                    <input asp-for="Horas" readonly type="number" step="0.01" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="IdTipoActividad">Tipo de Actividad:</label>
                    <input asp-for="IdTipoActividadNavigation.NomActividad" readonly class="form-control" />
                </div>
            </div>
            <div class="buttons">
                <button type="submit" name="action" value="Aprobar" class="accept">Aprobar</button>
                <button type="submit" name="action" value="Rechazar" class="deny">Rechazar</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</body>
</html>
