@model IEnumerable<SitiosWeb.Model.SolicitudHorasExtra>
@{
    Layout = "~/Views/Shared/_LayoutColaborador.cshtml";
    

}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" type="text/css" href="~/css/menuSup.css" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&display=swap" rel="stylesheet">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Solicitar Horas Extras</title>
</head>
<body>
    <div class="form-container">
        @using (Html.BeginForm("SolicitarHorasExtras", "HorasExtras", FormMethod.Post))
        {
            <label for="fecha">Fecha:</label>
            <input type="date" id="fecha" name="fecha" required />

            <label for="horas">Horas:</label>
            <input type="number" id="horas" name="horas" step="0.01" required />

            <label for="idTipoActividad">Tipo de Actividad:</label>
            <select id="idTipoActividad" name="idTipoActividad" required>
                <!-- Opciones aquÃ­ -->
            </select>

            <button type="submit">Enviar Solicitud</button>
        }
    </div>
</body>
</html>
