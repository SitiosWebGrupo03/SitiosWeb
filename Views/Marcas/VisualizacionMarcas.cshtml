@{
    Layout = "~/Views/Shared/_LayoutJefatura.cshtml";
}
@model IEnumerable<SitiosWeb.Model.Marcas>

<!DOCTYPE html>
<html lang="es">
<head>
    <link rel="stylesheet" type="text/css" href="~/css/visualizarMarcas.css" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Visualización de Marcas</title>
</head>
<body>
    <div class="container">
        <main class="main-content">
            <h1>Visualización de marcas</h1>
            <form class="search-form">
                <label for="buscar">Buscar por:</label>
                <select id="buscar" name="buscar">
                    <option value="desplegable">Desplegable</option>
                </select>
                <button type="button">Buscar</button>
            </form>
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>ID Marca</th>
                            <th>Identificación</th>
                            <th>Hora de entrada</th>
                            <th>Hora de salida</th>
                            <th>Válido</th>
                            <th>Editar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var marca in Model)
                        {
                            <tr>
                                <td><input type="text" value="@marca.IdMarca" readonly /></td>
                                <td><input type="text" value="@marca.IdEmpleado" readonly /></td>
                                <td><input type="text" value="@marca.InicioJornada" readonly /></td>
                                <td><input type="text" value="@marca.FinJornada" readonly /></td>
                                <td><input type="text" value="@(marca.FinJornada > marca.InicioJornada ? "Sí" : "No")" readonly /></td>
                                <td><button type="button" class="edit-button">Editar</button></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="image">
                <img src="https://ld-wp73.template-help.com/imperion/corporatelanding/wp-content/uploads/2019/07/img-subscribe-737x1024.png" alt="Person Image">
            </div>
        </main>
    </div>
    <script>
        document.querySelectorAll('.edit-button').forEach(button => {
            button.addEventListener('click', () => {
                const row = button.closest('tr');
                row.querySelectorAll('input').forEach(input => {
                    input.readOnly = !input.readOnly;
                    if (!input.readOnly) {
                        input.focus();
                    }
                });
            });
        });
    </script>
</body>
</html>
