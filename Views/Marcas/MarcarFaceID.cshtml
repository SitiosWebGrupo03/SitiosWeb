@{
    var successMessage = TempData["SuccessMessage"] as string;
    var errorMessage = TempData["ErrorMessage"] as string;
}

@{
    string layout = null;
    if (User.IsInRole("JEFATURA"))
    {
        layout = "~/Views/Shared/_LayoutJefatura.cshtml";
    }
    else if (User.IsInRole("COLABORADOR"))
    {
        layout = "~/Views/Shared/_LayoutColaborador.cshtml";
    }
    Layout = layout;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Control de Marcas</title>
    <link rel="stylesheet" type="text/css" href="~/css/marcarFaceID.css">
</head>
<body>
    <div class="container">
        <aside class="sidebar">
            @{
                if (User.IsInRole("JEFATURA"))
                {
                    <div class="sidebar-header">
                        <h2>Opciones de marcas</h2>
                    </div>
                    <ul class="sidebar-menu">
                        <li><a asp-controller="Home" asp-action="MarcaNormal">Por usuario</a></li>
                        <li>Identificacion facial</li>
                    </ul>
                }
                else if (User.IsInRole("COLABORADOR"))
                {
                    <div class="sidebar-header">
                        <h2>Opciones de marcas</h2>
                    </div>
                    <ul class="sidebar-menu">
                        <li><a asp-controller="Home" asp-action="MarcaNormalColab">Por usuario</a></li>
                        <li>Identificacion facial</li>
                    </ul>
                }
            }
        </aside>
        <main class="main-content">
            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="alert alert-success">@successMessage</div>
            }

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger">@errorMessage</div>
            }
            <h1>Control de Marcas</h1>
            <form asp-controller="Marca" asp-action="ProcessImage" method="post" id="captureForm">
                <div class="check-in-out">
                    <div class="date">
                        <h3>Fecha:</h3>
                    </div>
                    <div class="containerFace">
                        <video id="video" autoplay></video>
                        <canvas id="canvas" style="display: none;"></canvas>
                    </div>
                    <div class="time">
                        <div class="entry-time">
                            <h4>Hora de entrada</h4>
                            <p></p>
                        </div>
                        <div class="exit-time">
                            <h4>Hora de salida</h4>
                            <p></p>
                        </div>
                    </div>
                    <div id="status"></div>
                    <input type="hidden" name="photo" id="photoField" />
                    <div class="buttons">
                        <button type="button" class="btn btn-entry" id="captureBtn">Marcar</button>
                    </div>
                </div>
            </form>
        </main>
    </div>
    <script src="~/js/Video.js"></script>
</body>
</html>