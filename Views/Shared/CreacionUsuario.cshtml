@{
    Layout = "~/Views/Shared/_LayoutJefatura.cshtml";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <link rel="stylesheet" type="text/css" href="~/css/CrearUsuario.css" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Creación de Usuario</title>
</head>
<body>
   
    <div class="container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }
        <div class="header">

            <h1>Creación de Usuario</h1>
        </div>
        <div class="form-container">
           
            <div class="image-section">
                <img src="person.png" alt="Person">
            </div>
            <div class="form-section">
                <form asp-controller="Expediente" asp-action="CrearUsuario" method="post">
                    <label for="user-code">Código de Usuario</label>
                    <input type="text" id="user-code" name="codigoUsuario">

                    <label for="password">Contraseña</label>
                    <input type="password" id="password" name="Contrasena">

                    <label for="user-type">Tipo De Usuario</label>
                    <select id="user-type" name="TipoUsuario">
                        <option value="1">Supervisor</option>
                        <option value="2">Jefatura</option>
                        <option value="3">Colaborador</option>
                    </select>

                    <label for="collaborator-id">Cédula del Colaborador</label>
                    <input type="text" id="collaborator-id" name="IdColaborador">

                    <label>Estado</label>
                    <div class="radio-buttons">
                        <input type="radio" id="active" name="Estado" value="1">
                        <label for="active">Activo</label>

                        <input type="radio" id="inactive" name="Estado" value="2">
                        <label for="inactive">Inactivo</label>
                    </div>


                    <button type="submit" class="save-button">Guardar</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
