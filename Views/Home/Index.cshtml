</html>
<script>const testimonialsContainer = document.querySelector('.testimonials_container');
let testimonialIndex = 0;

function showNextTestimonial() {
    testimonialIndex = (testimonialIndex + 1) % testimonialsContainer.children.length;
    const offset = -testimonialIndex * 100;
    testimonialsContainer.style.transform = `translateX(${offset}%)`;
}

setInterval(showNextTestimonial, 5000);
</script>
