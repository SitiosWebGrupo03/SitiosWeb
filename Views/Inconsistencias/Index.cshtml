@model IEnumerable<SitiosWeb.Model.Inconsistencias>

@{
    Layout = "~/Views/Shared/_LayoutJefatura.cshtml";

}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" type="text/css" href="~/css/menuInconsistencias.css" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inconsistencias</title>
</head>
<body>
    <div class="wrapper">
        <div id="contenedor">
            <div class="vertical-menu">
                <h4>Filtrar por:</h4>
                <a href="" class="active">Opciones</a>
                <a href="">Nombre</a>
                <a href="">Identificacion</a>
            </div>

            <div id="contenido">
                <table class="table">
            <thead>
                <tr>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <p>
                        Fecha Inconsistencia: @item.FechaInconsistencia.ToString() 
                        <br />
                        Identificacion: @item.IdEmpleado.ToString() 
                        <br />
                        Nombre: @item.IdEmpleadoNavigation.Nombre 
                        <br />
                        Numero de Justificacion: @item.IdJustificacion.ToString() 
                        <br />
                        Tipo de Inconsistencia: @item.IdTipoInconsistenciaNavigation.Descripcion 
                        <br />
                        <a asp-action="Justificacion" asp-route-id="@item.IdJustificacion">Justificacion</a> 
                    </p>
                }
            </tbody>
        </table
            </div>

            <div id="pie">
                <a href="../Menu/menuSupervisor.html"> Volver al menu</a>
            </div>
        </div>
    </div>
</body>
</html>


