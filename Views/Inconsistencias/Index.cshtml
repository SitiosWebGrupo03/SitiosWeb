@model IEnumerable<SitiosWeb.Model.Inconsistencias>

@{
    Layout = "~/Views/Shared/_LayoutJefatura.cshtml";
    string id = "";

}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" type="text/css" href="~/css/menuInconsistencias.css" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inconsistencias</title>
</head>
<body>
    <div class="wrapper">
        <div class="vertical-menu">
            <h4>Filtrar por:</h4>
            <a href="" class="active">Opciones</a>
            <a href="">Nombre</a>
            <a href="">Identificación</a>
        </div>

        <div id="contenedor">
            <div id="contenido">
                <table class="table">
                    <thead>
                        <tr>
                           
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <p>
                                        @id="@item.IdEmpleado"
                                        Fecha Inconsistencia: @item.FechaInconsistencia.ToString()
                                        <br />
                                        Identificación: @item.IdEmpleado.ToString()
                                        <br />
                                        Nombre: @item.IdEmpleadoNavigation.Nombre
                                        <br />
                                        Número de Justificación: @item.IdJustificacion.ToString()
                                        <br />
                                        Tipo de Inconsistencia: @item.IdTipoInconsistenciaNavigation.Descripcion
                                        <br />
                                        <a asp-action="Justificacion" asp-route-id="@item.IdJustificacion">Justificación</a>
                                    </p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="consultas">
                <div class="form-group">
                    <label for="idEmpleado" class="control-label">Identificación</label>
                    <input type="text" id="idEmpleado" name="idEmpleado" class="form-control"></input>
                    <a asp-controller="Inconsistencias" asp-action="" asp-route-id="">Filtrar</a>
                </div>

                <div class="form-group">
                    <label for="idNombre" class="control-label">Nombre</label>
                    <input type="text" id="idNombre" name="idNombre" class="form-control" />
                    <a asp-controller="Inconsistencias" asp-action="">Filtrar</a>
                </div>
            </div>
        </div>

        <div id="pie">
            <a href="../Menu/menuSupervisor.html"> Volver al menú</a>
        </div>
    </div>
</body>
</html>

