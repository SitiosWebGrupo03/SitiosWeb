@model IEnumerable<SitiosWeb.Model.Inconsistencias>

@{
    Layout = "~/Views/Shared/_LayoutJefatura.cshtml";
    string id = "";

}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" type="text/css" href="~/css/menuInconsistencias.css" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inconsistencias</title>
</head>
<body>
    <div class="wrapper">
        <div class="vertical-menu">
            <h4>Filtrar por:</h4>
            <a href="" class="active">Opciones</a>
            <a href="">Nombre</a>
            <a href="">Identificación</a>
        </div>

        <div id="contenedor">
            <div id="contenido">
              
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <p>
                                        Fecha Inconsistencia: @item.FechaInconsistencia.ToString()
                                        <br />
                                        Identificación: @item.IdEmpleado.ToString()
                                        <br />
                                        Nombre: @item.IdEmpleadoNavigation.Nombre
                                        <br />
                                        Número de Justificación: @item.IdJustificacion.ToString()
                                        <br />
                                        Tipo de Inconsistencia: @item.IdTipoInconsistenciaNavigation.Descripcion
                                        <br />
                                        <a asp-action="Justificacion" asp-route-id="@item.IdJustificacion">Justificación</a>
                                    </p>
                                </td>
                            </tr>
                        }
                   
            </div>

            <div class="consultas">
                <div class="form-group">
                    <label for="idNombre" class="control-label">Nombre</label>
                    <input type="text" id="idNombre" name="idNombre" class="form-control" />
                    <a href="#" id="filtrarLink" class="btn btn-primary">Filtrar por Nombre</a>
                </div>

                <div class="form-group">
                    <label for="idNombre" class="control-label">Identificacion</label>
                    <input type="text" id="idNombre" name="idNombre" class="form-control" />
                    <a asp-controller="Inconsistencias" asp-action="IndexByName">Filtrar por Identificacion</a>
                </div>
            </div>
        </div>

        <div id="pie">
        </div>
    </div>
</body>
</html>

<script>

    document.getElementById('filtrarLink').addEventListener('click', function (event) {
        event.preventDefault();
        var nombre = document.getElementById('idNombre').value;
        if (nombre) {
            var url = '/Inconsistencias/IndexByName/' + encodeURIComponent(nombre);
            window.location.href = url;
        } else {
            alert('Por favor, ingrese un nombre.');
        }
    });
</script>