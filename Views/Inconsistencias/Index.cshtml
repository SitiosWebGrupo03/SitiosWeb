@model IEnumerable<SitiosWeb.Model.Inconsistencias>

@{
    Layout = "~/Views/Shared/_LayoutJefatura.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/css/fichasInconsistencias.css" />
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="container">

        <div id="cabecera">
            <img class="logo" src="~/images/logoMaster.jpeg">
            <h1>Inconsistencias</h1>
            <img class="imagen" src="~/images/image.png">
        </div>

        <table class="table">
            <thead>
                <tr>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <p>
                        Fecha Inconsistencia: @item.FechaInconsistencia.ToString() <br />
                        <br />
                        Identificacion: @item.IdEmpleado.ToString() <br />
                        <br />
                        Nombre: @item.IdEmpleadoNavigation.Nombre  <br />
                        <br />
                        Numero de Justificacion: @item.IdJustificacion.ToString() <br />
                        <br />
                        Tipo de Inconsistencia: @item.IdTipoInconsistenciaNavigation.Descripcion <br />
                        <br />
                        <a asp-action="Justificacion" asp-route-id="@item.IdJustificacion">Justificacion</a> |
                    </p>
                }
            </tbody>
        </table>

    </div>
</body>
</html>
