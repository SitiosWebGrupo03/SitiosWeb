@model SitiosWeb.Model.JustificacionesInconsistencias

@{
    Layout = "~/Views/Shared/_LayoutJefatura.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Justificación</title>
</head>
<body>
    <div class="container">
        <h2>Detalles de la Justificación</h2>
        <form asp-controller="SolicitudeRebajo" asp-action="solicitarRebajo" method="post">
            <div class="form-group">
                <label for="IdJustificacion">ID Justificación</label>
                <input type="text" class="form-control" id="IdJustificacion" name="IdJustificacion" value="@Model.IdJustificacion" readonly />
            </div>
            <div class="form-group">
                <label for="IdColaborador">ID Colaborador</label>
                <input type="text" class="form-control" id="IdColaborador" name="IdColaborador" value="@Model.IdColaborador" readonly />
            </div>
            <div class="form-group">
                <label for="IdPuesto">ID Puesto</label>
                <input type="text" class="form-control" id="IdPuesto" name="IdPuesto" value="@Model.IdPuesto" readonly />
            </div>
            <div class="form-group">
                <label for="IdDepartamento">ID Departamento</label>
                <input type="text" class="form-control" id="IdDepartamento" name="IdDepartamento" value="@Model.IdDepartamento.ToString()" readonly />
            </div>
            <div class="form-group">
                <label for="IdTipoInconsistencia">ID Tipo Inconsistencia</label>
                <input type="text" class="form-control" id="IdTipoInconsistencia" name="IdTipoInconsistencia" value="@Model.IdTipoInconsistencia.ToString()" readonly />
            </div>
            <div class="form-group">
                <label for="ReponeTiempo">Repone Tiempo</label>
                <input type="text" class="form-control" id="ReponeTiempo" name="ReponeTiempo" value="@Model.ReponeTiempo.ToString()" readonly />
            </div>
            <div class="form-group">
                <label for="HorarioId">Horario ID</label>
                <input type="text" class="form-control" id="HorarioId" name="HorarioId" value="@Model.HorarioId" readonly />
            </div>
            <div class="form-group">
                <label for="FechaInconsistencia">Fecha Inconsistencia</label>
                <input type="text" class="form-control" id="FechaInconsistencia" name="FechaInconsistencia" value="@Model.FechaInconsistencia.ToString("yyyy-MM-dd")" readonly />
            </div>
            <div class="form-group">
                <label for="Observaciones">Observaciones</label>
                <textarea class="form-control" id="Observaciones" name="Observaciones" readonly>@Model.Observaciones</textarea>
            </div>
            <div class="form-group">
                <label for="Reposicion">Reposición</label>
                <input type="text" class="form-control" id="Reposicion" name="Reposicion" value="@Model.Reposicion?.ToString()" readonly />
            </div>
            <div class="form-group">
                <label for="Evidencias">Evidencias</label>
                @if (Model.Evidencias != null && Model.Evidencias.Length > 0)
                {
                    <a href="@Url.Action("DescargarEvidencia", "SolicitudeRebajo", new { id = Model.IdJustificacion })">Descargar Evidencia</a>
                }
                else
                {
                    <p>No hay evidencia adjunta</p>
                }
            </div>
            <button type="submit" class="btn btn-primary">Aplicar rebajo</button>
        </form>

        <form asp-controller="SolicitudeRebajo" asp-action="rechazarRebajo" method="post">
            <input type="hidden" name="IdJustificacion" value="@Model.IdJustificacion" />
            <button type="submit" class="btn btn-danger">Rechazar rebajo</button>
        </form>
    </div>
</body>
</html>
