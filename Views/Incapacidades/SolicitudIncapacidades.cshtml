@{
    string layout = null;
    if (User.IsInRole("JEFATURA"))
    {
        layout = "~/Views/Shared/_LayoutJefatura.cshtml";
    }
    else if (User.IsInRole("COLABORADOR"))
    {
        layout = "~/Views/Shared/_LayoutColaborador.cshtml";
    }
    else if (User.IsInRole("SUPERVISOR"))
    {
        layout = "~/Views/Shared/_LayoutSupervisor.cshtml"; // Corregido
    }
    Layout = layout;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Solicitud de Incapacidades</title>
    <link rel="stylesheet" type="text/css" href="~/css/SolicitudIncapacidad.css">
</head>
<body>
    <div class="container">
        <div class="header">
            <img src="persona.png" alt="Persona" class="persona-img">
            <h1>Solicitud de incapacidades</h1>
        </div>
        <div class="form-container">
            @if (User.IsInRole("JEFATURA") || User.IsInRole("SUPERVISOR"))
            {
                <aside class="sidebar">
                    <h2>Opciones de marcas</h2>
                    <ul>
                        <li><a asp-controller="PermisosInca" asp-action="cargarTablaIncapacidades">Gestión de Incapacidades</a></li>
                    </ul>
                </aside>
            }

            <form>
                <div class="form-row">
                    <div class="input-group">
                        <label for="identificacion">Identificación</label>
                        <input type="text" id="identificacion" name="identificacion">
                    </div>
                    <div class="input-group">
                        <label for="puestoLaboral">Puesto Laboral</label>
                        <input type="text" id="puestoLaboral" name="puestoLaboral">
                    </div>
                </div>
                <div class="form-row">
                    <div class="input-group">
                        <label for="nombre">Nombre</label>
                        <input type="text" id="nombre" name="nombre">
                    </div>
                    <div class="input-group">
                        <label for="tipoIncapacidad">Tipo de Incapacidad</label>
                        <select id="tipoIncapacidad" name="tipoIncapacidad">
                            @if (ViewBag.Permisos != null)
                            {
                                @foreach (var permiso in ViewBag.Permisos)
                                {
                                    <option value="@permiso.IdTipoPermiso">@permiso.Descripcion</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="form-row">
                    <div class="input-group">
                        <label for="fechaInicial">Fecha Inicial</label>
                        <input type="date" id="fechaInicial" name="fechaInicial">
                    </div>
                    <div class="input-group">
                        <label for="fechaFinal">Fecha Final</label>
                        <input type="date" id="fechaFinal" name="fechaFinal">
                    </div>
                </div>
                <div class="buttons">
                    <button type="reset" class="btn-cancelar">Cancelar</button>
                    <button type="submit" class="btn-solicitar">Solicitar</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>