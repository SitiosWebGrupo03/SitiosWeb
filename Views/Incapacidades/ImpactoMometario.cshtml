@using System.Globalization
@{
    string layout = null;
    if (User.IsInRole("JEFATURA"))
    {
        layout = "~/Views/Shared/_LayoutJefatura.cshtml";
    }
    else if (User.IsInRole("SUPERVISOR"))
    {
        layout = "~/Views/Shared/_LayoutSupervisor.cshtml";
    }
    Layout = layout;
}
@{
    var successMessage = TempData["SuccessMessage"] as string;
    var errorMessage = TempData["ErrorMessage"] as string;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Impacto Monetario de la Incapacidad</title>
    <link rel="stylesheet" href="~/css/impactoMonetario.css">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/0.5.0-beta4/html2canvas.min.js"></script>
</head>
<body>
    <div class="container">
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger">@errorMessage</div>
        }
        <div class="top-section">
            <form asp-controller="SolicitudInca" asp-action="ObtenerImpactoMonetario" method="post">
                <div class="input-group">
                    <label for="identificacion">Identificación</label>
                    <input type="text" id="identificacion" name="identificacion" placeholder="Identificación" required>
                </div>
                <div class="action-buttons">
                    <button type="submit" class="accept-btn">Calcular</button>
                </div>
            </form>
        </div>
        <div class="bottom-section">
            <div class="form-section">
                <div class="input-group">
                    <label for="nombre">Nombre</label>
                    <input type="text" id="nombre" placeholder="Nombre" value="@(ViewBag.Resultado?.NombreColaborador ?? string.Empty)" disabled>
                </div>
                <div class="input-group">
                    <label for="salario">Salario</label>
                    <input type="text" id="salario" placeholder="Salario" value="@(ViewBag.Resultado?.SalarioDiario.ToString(CultureInfo.InvariantCulture) ?? string.Empty)" disabled>
                </div>
                <div class="percentage-section">
                    <div class="percentage-box">
                        <label for="empresa">Porcentaje pagado por la empresa:</label>
                        <input type="text" id="empresa" value="@(ViewBag.Resultado?.DiasIncapacidad.ToString(CultureInfo.InvariantCulture) ?? string.Empty)" disabled>
                    </div>
                    <div class="percentage-box">
                        <label for="ins">Porcentaje pagado por la CCSS:</label>
                        <input type="text" id="ins" placeholder="" value="@(ViewBag.Resultado?.PagoDLCaja.ToString(CultureInfo.InvariantCulture) ?? string.Empty)" disabled>
                    </div>
                </div>
            </div>
            <div class="action-buttons">
                <button class="cancel-btn" onclick="descargarArchivo()">Descargar</button>
            </div>
        </div>
    </div>
    <script src="~/js/PdfImpactoMonetarios.js"></script>
</body>
</html>