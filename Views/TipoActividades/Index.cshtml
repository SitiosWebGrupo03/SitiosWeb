@model IEnumerable<SitiosWeb.Model.TipoActividades>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomActividad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomActividad)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdTipoActividad">Edit</a> |
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.IdTipoActividad">Details</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdTipoActividad">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
