@model SitiosWeb.Model.HorasExtra

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulario de Horas Extras</title>
    <link rel="stylesheet" type="text/css" href="~/css/solicitud.css" />
</head>
<body>
    <div class="background-circle circle1"></div>
    <div class="background-circle circle2"></div>
    <div class="container">
        <div class="header">
            <img src="tu-imagen.jpg" alt="Imagen de perfil">
            <h1>Gestión de Horas Extras</h1>
        </div>
        <form asp-action="Create" method="post">
            <div class="form-section">
                <div class="form-group">
                    <label for="idEmpleado">ID del Empleado:</label>
                    <input type="text" id="idEmpleado" name="IdEmpleado" value="@Model.IdEmpleado">
                </div>
                <div class="form-group">
                    <label for="fechaRealizacion">Fecha de Realización:</label>
                    <input type="date" id="fechaRealizacion" name="FechaRealizacion" value="@Model.FechaRealizacion">
                </div>
                <div class="form-group">
                    <label for="idTipoActividad">Tipo de Actividad:</label>
                    <select id="idTipoActividad" name="IdTipoActividad">
                        <option value="">Seleccione una actividad</option>
                        <option value="1" @(Model.IdTipoActividad == 1 ? "selected" : "")>Proyecto Urgente</option>
                        <option value="2" @(Model.IdTipoActividad == 2 ? "selected" : "")>Reunión de Emergencia</option>
                        <option value="3" @(Model.IdTipoActividad == 3 ? "selected" : "")>Mantenimiento del Sistema</option>
                        <option value="4" @(Model.IdTipoActividad == 4 ? "selected" : "")>Preparación de Presentación</option>
                        <option value="5" @(Model.IdTipoActividad == 5 ? "selected" : "")>Capacitación Interna</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="estadoDelPago">Estado del Pago:</label>
                    <input type="checkbox" id="estadoDelPago" name="EstadoDelPago" @(Model.EstadoDelPago ? "checked" : "")>
                </div>
                <div class="form-group">
                    <label for="cantidadHoras">Cantidad de Horas:</label>
                    <input type="number" id="cantidadHoras" name="CantidadHoras" step="0.01" value="@Model.CantidadHoras">
                </div>
                <div class="form-group">
                    <label for="idSolicitante">ID del Solicitante:</label>
                    <input type="text" id="idSolicitante" name="IdSolicitante" value="@Model.IdSolicitante">
                </div>
                <div class="form-group">
                    <label for="cantidadPago">Cantidad del Pago:</label>
                    <input type="number" id="cantidadPago" name="CantidadPago" step="0.01" value="@Model.CantidadPago">
                </div>
            </div>
            <div class="buttons">
                <button type="submit" class="accept">Enviar Solicitud</button>
                <button type="reset" class="deny">Cancelar</button>
            </div>
        </form>
    </div>
</body>
</html>

