

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Control General de Horas Extras</title>
    <link rel="stylesheet" type="text/css" href="~/css/control-general.css" />
</head>
<body>
    <div class="background-circle circle1"></div>
    <div class="background-circle circle2"></div>
    <div class="container">
        <div class="header">
            <img src="tu-imagen.jpg" alt="Imagen de perfil">
            <h1>Control General de Horas Extras</h1>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>ID Empleado</th>
                    <th>Fecha Realización</th>
                    <th>Tipo de Actividad</th>
                    <th>Estado del Pago</th>
                    <th>Cantidad de Horas</th>
                    <th>ID Solicitante</th>
                    <th>Cantidad del Pago</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdHoras</td>
                        <td>@item.IdEmpleado</td>
                        <td>@item.FechaRealizacion.ToShortDateString()</td>
                        <td>@item.IdTipoActividadNavigation?.NomActividad</td>
                        <td>@(item.EstadoDelPago ? "Pagado" : "Pendiente")</td>
                        <td>@item.CantidadHoras</td>
                        <td>@item.IdSolicitante</td>
                        <td>@item.CantidadPago</td>
                        <td>
                            <a href="/HorasExtra/Edit/@item.IdHoras" class="btn btn-primary">Editar</a>
                            <a href="/HorasExtra/Details/@item.IdHoras" class="btn btn-info">Ver</a>
                            <a href="/HorasExtra/Delete/@item.IdHoras" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="buttons">
            <a href="/HorasExtra/Create" class="btn btn-success">Añadir Nueva Solicitud</a>
        </div>
    </div>
</body>
</html>

